<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.silencedut.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:expWithParentScroll="true">

            <LinearLayout
                android:id="@+id/firstLayer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/md_tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="24dp"
                    android:gravity="center_vertical"

                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_btn_speak_now"
                    tools:text="Organiser: Kasper 1" />

                <TextView
                    android:id="@+id/md_tv_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="24dp"
                    android:gravity="center_vertical"

                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_btn_speak_now"
                    tools:text="Organiser: Kasper 2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/md_tv_profile_3"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="24dp"
                    android:gravity="center_vertical"

                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_btn_speak_now"
                    tools:text="Organiser: Kasper 3" />

                <TextView
                    android:id="@+id/md_tv_attachment_4"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="24dp"
                    android:gravity="center_vertical"

                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_btn_speak_now"
                    tools:text="Organiser: Kasper 4" />

            </LinearLayout>

        </com.silencedut.expandablelayout.ExpandableLayout>

        <Button
            android:id="@+id/view_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View more" />
    </LinearLayout>
</android.support.v7.widget.CardView>